@using PlacesYouveBeen.Models

<h1>Travel Diary</h1>
@if (Model.Count == 0)
{
  <p>There are no places listed...Have you been anywhere?</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li><a href="/places/@place.Id">@place.City</a></li>
  }
</ul>
<a href="/places/new">Add another travel entry</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear all entries!</button>
</form>